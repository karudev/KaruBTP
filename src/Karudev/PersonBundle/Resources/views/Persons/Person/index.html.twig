{% extends "::base.html.twig" %}
{% block styleSheet %}
{% endblock styleSheet %}

{% block body %}
    <div>
        {{form_start(searchForm)}}
        {{form_row(searchForm.search)}}
        {{form_end(searchForm)}}
    </div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone principal</th>
                    <th>Téléphone secondaire</th>
                    <th>Adresse</th>
                    <th>Code postal</th>
                    <th>Ville</th>
                    <th>Pays</th>
                </tr>
            </thead>
            <tbody>
                {% for person in persons %}
                <tr>
                    <td>{{person.lastname}}</td>
                    <td>{{person.firstname}}</td>
                    <td>{{person.email}}</td>
                    <td>{{person.mainPhone}}</td>
                    <td>{{person.secondaryPhone}}</td>
                    <td>{{person.address}}</td>
                    <td>{{person.zipCode}}</td>
                    <td>{{person.city}}</td>
                    <td>{{person.country}}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock body %}
{% block javascripts %}
<script src="{{ asset('/bundles/karudevperson/js/person.js') }}"></script>
{% endblock javascripts %}